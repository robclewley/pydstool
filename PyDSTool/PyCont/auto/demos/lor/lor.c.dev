int func (integer ndim, const doublereal *u, const integer *icp,
          const doublereal *par, integer ijac,
          doublereal *f, doublereal *dfdu, doublereal *dfdp)
{
  f[0] = par[2] * (u[1] - u[0]);
  f[1] = par[0] * u[0] - u[1] - u[0] * u[2];
  f[2] = u[0] * u[1] - par[1] * u[2];

  return 0;
}
